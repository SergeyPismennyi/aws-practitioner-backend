{
  "name": "product-service",
  "version": "1.0.0",
  "author": "Siarhei Pismennyi",
  "scripts": {
    "build": "tsc && npm run lint && node esbuild.js",
    "build:prd": "tsc && npm run lint && node esbuild.js -p",
    "prettier": "prettier --config .prettierrc.js --write \"**/*.{js,ts}\"",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "prepare": "cd .. && husky install product-service/.husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint:fix -c .eslintrc.husky.js",
      "prettier --write"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.122",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "esbuild": "^0.19.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
